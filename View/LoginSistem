    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton2ActionPerformed
        int confirm = JOptionPane.showConfirmDialog(this,
            "Apakah Anda yakin ingin keluar?",
            "Konfirmasi Keluar",
            JOptionPane.YES_NO_OPTION,
            JOptionPane.QUESTION_MESSAGE);

        if (confirm == JOptionPane.YES_OPTION) {
            System.exit(0); // Tutup aplikasi
        }
    }//GEN-LAST:event_jButton2ActionPerformed

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton3ActionPerformed
        // Ambil input dari textfield
        String username = txtUsername.getText().trim();
        String password = new String(txtPassword.getPassword());

        // Validasi input kosong
        if (username.isEmpty() || password.isEmpty()) {
            JOptionPane.showMessageDialog(this, 
                "Username dan Password tidak boleh kosong!", 
                "Peringatan", 
                JOptionPane.WARNING_MESSAGE);
            return;
        }

        // Proses login
        LoginSystem loginSystem = new LoginSystem();
        User user = loginSystem.login(username, password);

        if (user != null) {
            // Login berhasil
            JOptionPane.showMessageDialog(this, 
                "Login berhasil!\nSelamat datang, " + user.getNama(), 
                "Sukses", 
                JOptionPane.INFORMATION_MESSAGE);

            // Cek tipe user dan buka menu sesuai role
            if (user instanceof Petugas) {
                Petugas petugas = (Petugas) user;

                // âœ… gunakan idUser dari objek Petugas
                MenuPetugas menu = new MenuPetugas(petugas.getIdUser()); 
                menu.setVisible(true);
                this.dispose();

            } else if (user instanceof Dokter) {
                Dokter dokter = (Dokter) user;
                MenuDokter menuDokter = new MenuDokter(dokter);
                menuDokter.setVisible(true);
                this.dispose();

            } else {
                JOptionPane.showMessageDialog(this, 
                    "Tipe user tidak dikenali!", 
                    "Error", 
                    JOptionPane.ERROR_MESSAGE);
            }


        } else {
            // Login gagal
            JOptionPane.showMessageDialog(this, 
                "Username atau Password salah!", 
                "Login Gagal", 
                JOptionPane.ERROR_MESSAGE);
            txtPassword.setText("");
        }

    }//GEN-LAST:event_jButton3ActionPerformed

