        mainpanel.removeAll();
        mainpanel.revalidate();
        mainpanel.repaint();
        
        mainpanel.add(jPanelDashboardDokter);
        mainpanel.repaint();        
        mainpanel.revalidate();
        
        RefreshDashboard();
    }//GEN-LAST:event_btnDashboardDokterMouseClicked

