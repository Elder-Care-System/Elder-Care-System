package View;

import javax.swing.*;
import javax.swing.table.DefaultTableModel;
import Service.*;
import Model.*;
import Service.RekamMedisDokter.RekamMedisView;
import java.util.ArrayList;
import java.util.HashSet;
import java.util.List;
import java.util.Set;
import javax.swing.table.TableRowSorter;
import Service.ServiceUser;


/**
 *
 * @author Dina Putri
 */
public class MenuDokter extends javax.swing.JFrame {
    
    private static final java.util.logging.Logger logger = java.util.logging.Logger.getLogger(MenuDokter.class.getName());

    // ✅ DATA USER LOGIN
    private Dokter dokterLogin;
    ServiceUser serviceUser = new ServiceUser();
    
    // ✅ SERVICES
    private RekamMedisDokter rekamService = new RekamMedisDokter();
    private Laporan laporanService = new Laporan();
    
    // ✅ TABLE MODELS
    private DefaultTableModel modelRekam;
    private DefaultTableModel modelLaporan;
    private DefaultTableModel modelDashboard;
    
    private TableRowSorter<DefaultTableModel> sorterRekam;
    private TableRowSorter<DefaultTableModel> sorterLaporan;
    private TableRowSorter<DefaultTableModel> sorterDashboard;

    private List<RekamMedisView> allRekamData;
    private List<LaporanKesehatan> allLaporanData;
    
    // ✅ CONSTRUCTOR dengan passing user
    public MenuDokter(Dokter dokter) {
        initComponents();
        this.dokterLogin = dokter;
        setLocationRelativeTo(null);
        
        // Setup tables
        setupTabelRekam();
        setupTabelLaporan();
        setupTabelDashboard();
        
        // Load data awal
        loadDataRekam();
        loadDataLaporan();
        loadDataDashboard();
        
        setupSearchListeners();
        setupComboBoxFilters();
    }
    
    public void showPanel(JPanel panel) {
        mainpanel.removeAll();
        mainpanel.add(panel);
        mainpanel.revalidate();
        mainpanel.repaint();
    }
    
    // ✅ SETUP TABEL REKAM MEDIS
    private void setupTabelRekam() {
        String[] columns = {"ID Rekam Medis", "Tanggal", "Nama Lansia", "Diagnosis", "Tindakan", "Dokter", "ID Lansia"};
        modelRekam = new DefaultTableModel(columns, 0) {
            @Override
            public boolean isCellEditable(int row, int column) {
                return false;
            }
        };
        jTable3.setModel(modelRekam);
        
        // Setup row sorter untuk filtering
        sorterRekam = new TableRowSorter<>(modelRekam);
        jTable3.setRowSorter(sorterRekam);
    }
    
    // ✅ LOAD DATA REKAM MEDIS
    private void loadDataRekam() {
        modelRekam.setRowCount(0);
        allRekamData = rekamService.lihatSemuaRekamMedisWithDokter();
        
        for (RekamMedisView rm : allRekamData) {
            modelRekam.addRow(new Object[]{
                rm.getIdRekam(),
                rm.getTanggalPemeriksaan(),
                rm.getNamaLansia(),
                rm.getDiagnosis(),
                rm.getTindakan(),
                rm.getNamaDokter(),
                rm.getidLansia()
            });
        }
    }
    
    // ✅ SETUP TABEL LAPORAN KESEHATAN
    private void setupTabelLaporan() {
        String[] columns = {"ID Laporan", "Tanggal", "Nama Lansia", "Usia", "Keluhan", "Tindakan", "ID Lansia"};
        modelLaporan = new DefaultTableModel(columns, 0) {
            @Override
            public boolean isCellEditable(int row, int column) {
                return false;
            }
        };
        jTableRiwayatKes.setModel(modelLaporan);
        
        // Setup row sorter untuk filtering
        sorterLaporan = new TableRowSorter<>(modelLaporan);
        jTableRiwayatKes.setRowSorter(sorterLaporan);
    }
    
    // ✅ LOAD DATA LAPORAN
    private void loadDataLaporan() {
        modelLaporan.setRowCount(0);
        allLaporanData = laporanService.lihatSemuaLaporan();
        
        for (LaporanKesehatan l : allLaporanData) {
            Lansia ln = l.getLansia();
            modelLaporan.addRow(new Object[]{
                l.getIdLaporan(),
                l.getTanggalPeriksa(),
                ln.getNama(),
                ln.getUsia(),
                l.getKeluhan(),
                l.getTindakan(),
                ln.getidLansia()
            });
        }
    }
    
    private void setupTabelDashboard() {
    String[] columns = {"Nama Lansia", "Usia", "Keluhan", "Tindakan"};
    modelDashboard = new DefaultTableModel(columns, 0) {
        @Override
        public boolean isCellEditable(int row, int column) {
            return false;
        }
    };
    tabelDashboard.setModel(modelDashboard);
    
    // Setup row sorter (opsional, untuk fitur search di dashboard)
    sorterDashboard = new TableRowSorter<>(modelDashboard);
    tabelDashboard.setRowSorter(sorterDashboard);
    }
    
    private void loadDataDashboard() {
    // Load ringkasan data (3 kartu)
    loadRingkasanData();
    
    // Load tabel riwayat laporan
    loadRiwayatLaporan();
    }
    
    private void loadRingkasanData() {
    try {
        // 1️⃣ Get total Lansia (unique)
        int totalLansia = getTotalLansia();
        if (lblTotalLansia != null) {
            lblTotalLansia.setText(String.valueOf(totalLansia));
        }
        
        // 2️⃣ Get total Petugas + Dokter
        int totalPetugas = getTotalPetugasDokter();
        if (lblTotalPetugas != null) {
            lblTotalPetugas.setText(String.valueOf(totalPetugas));
        }
        
        // 3️⃣ Get total Laporan
        int totalLaporan = getTotalLaporan();
        if (lblTotalLaporan != null) {
            lblTotalLaporan.setText(String.valueOf(totalLaporan));
        }
        
    } catch (Exception e) {
        logger.warning("Error loading ringkasan data: " + e.getMessage());
        e.printStackTrace();
    }
    }
    
    private int getTotalLansia() {
    try {
        List<LaporanKesehatan> list = laporanService.lihatSemuaLaporan();
        
        // Hitung unique lansia berdasarkan ID (tidak duplicate)
        Set<Integer> uniqueLansia = new HashSet<>();
        for (LaporanKesehatan l : list) {
            if (l.getLansia() != null) {
                uniqueLansia.add(l.getLansia().getId());
            }
        }
        return uniqueLansia.size();
        
    } catch (Exception e) {
        logger.warning("Error getTotalLansia: " + e.getMessage());
        return 0;
    }
    }
    
    private int getTotalPetugasDokter() {
    try {
        List<UserView> list = serviceUser.lihatSemuaAkun();
        
        int count = 0;
        for (UserView u : list) {
            String role = u.getRole();
            if (role != null && (role.equalsIgnoreCase("Petugas") || role.equalsIgnoreCase("Dokter"))) {
                count++;
            }
        }
        return count;
        
    } catch (Exception e) {
        logger.warning("Error getTotalPetugasDokter: " + e.getMessage());
        return 0;
    }
}
    private int getTotalLaporan() {
    try {
        List<LaporanKesehatan> list = laporanService.lihatSemuaLaporan();
        return list.size();
        
    } catch (Exception e) {
        logger.warning("Error getTotalLaporan: " + e.getMessage());
        return 0;
    }
}
    private void loadRiwayatLaporan() {
    if (modelDashboard == null) return;
    
    try {
        modelDashboard.setRowCount(0);
        List<LaporanKesehatan> list = laporanService.lihatSemuaLaporan();
        
        // Ambil 10 data terbaru (bisa disesuaikan)
        int limit = Math.min(list.size(), 10);
        
        for (int i = 0; i < limit; i++) {
            LaporanKesehatan l = list.get(i);
            Lansia ln = l.getLansia();
            
            if (ln != null) {
                modelDashboard.addRow(new Object[]{
                    ln.getNama(),
                    ln.getUsia(),
                    l.getKeluhan(),
                    l.getTindakan()
                });
            }
        }
        
    } catch (Exception e) {
        logger.warning("Error loadRiwayatLaporan: " + e.getMessage());
        e.printStackTrace();
    }
}
    private void RefreshDashboard() {
    // Cek apakah panel dashboard sedang aktif/visible
    try {
        if (jPanelDashboardDokter != null && jPanelDashboardDokter.isShowing()) {
            loadDataDashboard();
        }
    } catch (Exception e) {
        logger.warning("Error autoRefreshDashboard: " + e.getMessage());
    }
}
    
    private void setupComboBoxFilters() {
        // Setup ComboBox Filter Rekam Medis
        try {
            if (jFilterDataRekam != null) {
                jFilterDataRekam.removeAllItems();
                jFilterDataRekam.addItem("Reset");
                jFilterDataRekam.addItem("Nama Lansia (A-Z)");
                jFilterDataRekam.addItem("Nama Lansia (Z-A)");
                jFilterDataRekam.addItem("Diagnosis (A-Z)");
                jFilterDataRekam.addItem("Diagnosis (Z-A)");
                jFilterDataRekam.addItem("Tanggal (Terbaru)");
                jFilterDataRekam.addItem("Tanggal (Terlama)");
                jFilterDataRekam.addItem("Dokter (A-Z)");
                jFilterDataRekam.addItem("Dokter (Z-A)");
                
                jFilterDataRekam.addActionListener(e -> applyFilterRekam());
            }
        } catch (Exception e) {
            logger.warning("cmbFilterRekam component not found: " + e.getMessage());
        }
        
        // Setup ComboBox Filter Laporan Kesehatan
        try {
            if (jFilterDataLaporan != null) {
                jFilterDataLaporan.removeAllItems();
                jFilterDataLaporan.addItem("Reset");
                jFilterDataLaporan.addItem("Nama (A-Z)");
                jFilterDataLaporan.addItem("Nama (Z-A)");
                jFilterDataLaporan.addItem("Keluhan (A-Z)");
                jFilterDataLaporan.addItem("Keluhan (Z-A)");
                jFilterDataLaporan.addItem("Tanggal (Terbaru)");
                jFilterDataLaporan.addItem("Tanggal (Terlama)");
                
                jFilterDataLaporan.addActionListener(e -> applyFilterLaporan());
            }
        } catch (Exception e) {
            logger.warning("jFilterDataLaporan component not found: " + e.getMessage());
        }
    }
    
    private void setupSearchListeners() {
        // Cek apakah komponen search ada
        try {
            if (JCariRekam != null) {
                JCariRekam.getDocument().addDocumentListener(new javax.swing.event.DocumentListener() {
                    @Override
                    public void changedUpdate(javax.swing.event.DocumentEvent e) { searchRekamMedis(); }
                    @Override

                    public void removeUpdate(javax.swing.event.DocumentEvent e) { searchRekamMedis(); }
                    @Override
                    public void insertUpdate(javax.swing.event.DocumentEvent e) { searchRekamMedis(); }
                });
            }
        } catch (Exception e) {
            logger.warning("txtSearchRekam component not found: " + e.getMessage());
        }
        
        try {
            if (JCariLaporan != null) {
                JCariLaporan.getDocument().addDocumentListener(new javax.swing.event.DocumentListener() {
                    @Override
                    public void changedUpdate(javax.swing.event.DocumentEvent e) { searchLaporanKesehatan(); }
                    @Override
                    public void removeUpdate(javax.swing.event.DocumentEvent e) { searchLaporanKesehatan(); }
                    @Override
                    public void insertUpdate(javax.swing.event.DocumentEvent e) { searchLaporanKesehatan(); }
                });
            }
        } catch (Exception e) {
            logger.warning("txtSearchLaporan component not found: " + e.getMessage());
        }
    }
    
    private void searchRekamMedis() {
        // SAFETY CHECK - pastikan semua komponen sudah siap
        if (sorterRekam == null || JCariRekam == null) {
            return;
        }
        
        try {
            String searchText = JCariRekam.getText().trim().toLowerCase();
            
            if (searchText.isEmpty()) {
                sorterRekam.setRowFilter(null);
            } else {
                sorterRekam.setRowFilter(RowFilter.regexFilter("(?i)" + searchText));
            }
        } catch (Exception e) {
            logger.warning("Error in searchRekamMedis: " + e.getMessage());
        }
    }
    
    private void searchLaporanKesehatan() {
        // SAFETY CHECK - pastikan semua komponen sudah siap
        if (sorterLaporan == null || JCariLaporan == null) {
            return;
        }
        
        try {
            String searchText = JCariLaporan.getText().trim().toLowerCase();
            
            if (searchText.isEmpty()) {
                sorterLaporan.setRowFilter(null);
            } else {
                sorterLaporan.setRowFilter(RowFilter.regexFilter("(?i)" + searchText));
            }
        } catch (Exception e) {
            logger.warning("Error in searchLaporanKesehatan: " + e.getMessage());
        }
    }
    
    private void applyFilterRekam() {
        // SAFETY CHECK - pastikan semua komponen sudah siap
        if (sorterRekam == null || jFilterDataRekam == null) {
            return;
        }
        
        try {
            String selectedFilter = (String) jFilterDataRekam.getSelectedItem();
            
            if (selectedFilter == null || selectedFilter.equals("Reset")) {
                sorterRekam.setSortKeys(null);
                return;
            }
            
            List<RowSorter.SortKey> sortKeys = new ArrayList<>();
            
            switch (selectedFilter) {
                case "Nama Lansia (A-Z)":
                    sortKeys.add(new RowSorter.SortKey(2, SortOrder.ASCENDING));
                    break;
                case "Nama Lansia (Z-A)":
                    sortKeys.add(new RowSorter.SortKey(2, SortOrder.DESCENDING));
                    break;
                case "Diagnosis (A-Z)":
                    sortKeys.add(new RowSorter.SortKey(3, SortOrder.ASCENDING));
                    break;
                case "Diagnosis (Z-A)":
                    sortKeys.add(new RowSorter.SortKey(3, SortOrder.DESCENDING));
                    break;
                case "Tanggal (Terbaru)":
                    sortKeys.add(new RowSorter.SortKey(1, SortOrder.DESCENDING));
                    break;
                case "Tanggal (Terlama)":
                    sortKeys.add(new RowSorter.SortKey(1, SortOrder.ASCENDING));
                    break;
                case "Dokter (A-Z)":
                    sortKeys.add(new RowSorter.SortKey(5, SortOrder.ASCENDING));
                    break;
                case "Dokter (Z-A)":
                    sortKeys.add(new RowSorter.SortKey(5, SortOrder.DESCENDING));
                    break;
            }
            
            sorterRekam.setSortKeys(sortKeys);
            sorterRekam.sort();
        } catch (Exception e) {
            logger.warning("Error in applyFilterRekam: " + e.getMessage());
        }
    }
    
    private void applyFilterLaporan() {
        // SAFETY CHECK - pastikan semua komponen sudah siap
        if (sorterLaporan == null || jFilterDataLaporan == null) {
            return;
        }
        
        try {
            String selectedFilter = (String) jFilterDataLaporan.getSelectedItem();
            
            if (selectedFilter == null || selectedFilter.equals("Reset")) {
                sorterLaporan.setSortKeys(null);
                return;
            }
            
            List<RowSorter.SortKey> sortKeys = new ArrayList<>();
            
            switch (selectedFilter) {
                case "Nama (A-Z)":
                    sortKeys.add(new RowSorter.SortKey(2, SortOrder.ASCENDING));
                    break;
                case "Nama (Z-A)":
                    sortKeys.add(new RowSorter.SortKey(2, SortOrder.DESCENDING));
                    break;
                case "Keluhan (A-Z)":
                    sortKeys.add(new RowSorter.SortKey(4, SortOrder.ASCENDING));
                    break;
                case "Keluhan (Z-A)":
                    sortKeys.add(new RowSorter.SortKey(4, SortOrder.DESCENDING));
                    break;
                case "Tanggal (Terbaru)":
                    sortKeys.add(new RowSorter.SortKey(1, SortOrder.DESCENDING));
                    break;
                case "Tanggal (Terlama)":
                    sortKeys.add(new RowSorter.SortKey(1, SortOrder.ASCENDING));
                    break;
            }
            
            sorterLaporan.setSortKeys(sortKeys);
            sorterLaporan.sort();
        } catch (Exception e) {
            logger.warning("Error in applyFilterLaporan: " + e.getMessage());
        }
    }
    
    private void resetFilterRekam() {
        if (sorterRekam != null) {
            sorterRekam.setSortKeys(null);
            sorterRekam.setRowFilter(null);
        }
        if (JCariRekam != null) {
            JCariRekam.setText("");
        }
        if (jFilterDataRekam != null) {
            jFilterDataRekam.setSelectedIndex(0);
        }
    }
    
    // ✅ RESET FILTER LAPORAN
    private void resetFilterLaporan() {
        if (sorterLaporan != null) {
            sorterLaporan.setSortKeys(null);
            sorterLaporan.setRowFilter(null);
        }
        if (JCariLaporan != null) {
            JCariLaporan.setText("");
        }
        if (jFilterDataLaporan != null) {
            jFilterDataLaporan.setSelectedIndex(0);
        }
    }
    
    public void refreshLaporan() {
        loadDataLaporan();
        resetFilterLaporan();
        showPanel(jPanelLaporanKesDokter);
    }
    
    public void refreshRekam() {
        loadDataRekam();
        resetFilterRekam();
        RefreshDashboard();
    }

