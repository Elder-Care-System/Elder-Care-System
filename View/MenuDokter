    private void jButtonHapusDataActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButtonHapusDataActionPerformed
        int selectedRow = jTable3.getSelectedRow();
        
        if (selectedRow == -1) {
            JOptionPane.showMessageDialog(this,
                "Pilih data rekam medis yang ingin dihapus!",
                "Peringatan",
                JOptionPane.WARNING_MESSAGE);
            return;
        }
        
        int modelRow = jTable3.convertRowIndexToModel(selectedRow);
        int idRekam = (int) modelRekam.getValueAt(modelRow, 0);
        String namaLansia = (String) modelRekam.getValueAt(modelRow, 2);
        
        int confirm = JOptionPane.showConfirmDialog(this,
            "Apakah Anda yakin ingin menghapus rekam medis:\n" + namaLansia + "?",
            "Konfirmasi Hapus",
            JOptionPane.YES_NO_OPTION,
            JOptionPane.WARNING_MESSAGE);
        
        if (confirm == JOptionPane.YES_OPTION) {
            boolean success = rekamService.hapusRekamMedis(idRekam);
            
            if (success) {
                JOptionPane.showMessageDialog(this, "Data berhasil dihapus!");
                loadDataRekam();
            } else {
                JOptionPane.showMessageDialog(this, "Gagal menghapus data!", "Error", JOptionPane.ERROR_MESSAGE);
            }
        }
    }//GEN-LAST:event_jButtonHapusDataActionPerformed

    private void jButtonUbahDataActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButtonUbahDataActionPerformed
        int selectedRow = jTable3.getSelectedRow();

    if (selectedRow == -1) {
        JOptionPane.showMessageDialog(this,
            "Pilih data rekam medis yang ingin diubah!",
            "Peringatan",
            JOptionPane.WARNING_MESSAGE);
        return;
    }

    int modelRow = jTable3.convertRowIndexToModel(selectedRow);
    int idRekam = (int) modelRekam.getValueAt(modelRow, 0);

    String diagnosisLama = (String) modelRekam.getValueAt(modelRow, 3);
    String tindakanLama = (String) modelRekam.getValueAt(modelRow, 4);

    // Panel custom untuk input Diagnosis dan Tindakan
    JTextArea inputDiagnosis = new JTextArea(3, 20);
    JTextArea inputTindakan = new JTextArea(3, 20);
    inputDiagnosis.setText(diagnosisLama);
    inputTindakan.setText(tindakanLama);

    JPanel panel = new JPanel();
    panel.setLayout(new BoxLayout(panel, BoxLayout.Y_AXIS));
    panel.add(new JLabel("Diagnosis:"));
    panel.add(new JScrollPane(inputDiagnosis));
    panel.add(Box.createVerticalStrut(10));
    panel.add(new JLabel("Tindakan:"));
    panel.add(new JScrollPane(inputTindakan));

    int result = JOptionPane.showConfirmDialog(this, panel, 
            "Ubah Data Rekam Medis", JOptionPane.OK_CANCEL_OPTION, JOptionPane.PLAIN_MESSAGE);

    if (result == JOptionPane.OK_OPTION) {
        String diagnosisBaru = inputDiagnosis.getText().trim();
        String tindakanBaru = inputTindakan.getText().trim();

        if (diagnosisBaru.isEmpty() || tindakanBaru.isEmpty()) {
            JOptionPane.showMessageDialog(this, 
                "Diagnosis dan Tindakan tidak boleh kosong!", 
                "Error", JOptionPane.ERROR_MESSAGE);
            return;
        }

        boolean success = rekamService.updateRekamMedis(idRekam, diagnosisBaru, tindakanBaru);

        if (success) {
            JOptionPane.showMessageDialog(this, "✅ Data berhasil diubah!");
            loadDataRekam(); // refresh tabel
        } else {
            JOptionPane.showMessageDialog(this, "❌ Gagal mengubah data!", "Error", JOptionPane.ERROR_MESSAGE);
        }
    }
    }//GEN-LAST:event_jButtonUbahDataActionPerformed

