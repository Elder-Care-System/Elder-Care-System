    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton2ActionPerformed
        int confirm = JOptionPane.showConfirmDialog(
            this,
            "Apakah Anda ingin kembali?\nProgres Anda tidak akan tersimpan.",
            "Konfirmasi Kembali",
            JOptionPane.YES_NO_OPTION,
            JOptionPane.WARNING_MESSAGE
        );

        if (confirm == JOptionPane.YES_OPTION) {
            new MenuPetugas(1).setVisible(true);


            Window window = SwingUtilities.getWindowAncestor(this);
            if (window != null) {
                window.dispose();
        }
            }
    }//GEN-LAST:event_jButton2ActionPerformed

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
        try {
            // Validasi Nama
            String nama = jTextField1.getText().trim();
            if (nama.isEmpty()) {
                JOptionPane.showMessageDialog(this, 
                    "Nama tidak boleh kosong!", 
                    "Error", 
                    JOptionPane.ERROR_MESSAGE);
                jTextField1.requestFocus();
                return;
            }

            // Validasi Username
            String username = jTextField3.getText().trim();
            if (username.isEmpty()) {
                JOptionPane.showMessageDialog(this, 
                    "Username tidak boleh kosong!", 
                    "Error", 
                    JOptionPane.ERROR_MESSAGE);
                jTextField3.requestFocus();
                return;
            }
            
            // Cek username sudah ada
            if (ServiceUser.isUsernameExist(username)) {
                JOptionPane.showMessageDialog(this,
                    "Username sudah digunakan! Gunakan username lain.",
                    "Error",
                    JOptionPane.ERROR_MESSAGE);
                jTextField3.requestFocus();
                return;
            }

            // Validasi Password
            String password = jTextField2.getText().trim();
            if (password.isEmpty()) {
                JOptionPane.showMessageDialog(this, 
                    "Password tidak boleh kosong!", 
                    "Error", 
                    JOptionPane.ERROR_MESSAGE);
                jTextField2.requestFocus();
                return;
            }

            // Konfirmasi
            int confirm = JOptionPane.showConfirmDialog(this,
                "Tambah akun petugas:\n\n" +
                "Nama: " + nama + "\n" +
                "Username: " + username,
                "Konfirmasi Tambah",
                JOptionPane.YES_NO_OPTION,
                JOptionPane.QUESTION_MESSAGE);

            if (confirm != JOptionPane.YES_OPTION) {
                return;
            }

            // ✅ SIMPAN KE DATABASE
            int idPuskesmas = 2025102376; // Default puskesmas
            String bagian = "Pelayanan Lansia"; // Default bagian
            
            boolean success = ServiceUser.daftarPetugas(
                username, password, idPuskesmas, nama, bagian
            );

            if (success) {
                JOptionPane.showMessageDialog(this, 
                    "✅ Akun petugas berhasil ditambahkan!\n\n" +
                    "Username: " + username + "\n" +
                    "Nama: " + nama,
                    "Sukses",
                    JOptionPane.INFORMATION_MESSAGE);

                // Kembali ke menu kelola akun
                Window window = SwingUtilities.getWindowAncestor(this);
                if (window instanceof MenuPetugas) {
                    MenuPetugas menu = (MenuPetugas) window;
                    menu.refreshKelolaAkun();
                }

            } else {
                JOptionPane.showMessageDialog(this, 
                    "❌ Gagal menambahkan akun!\nSilakan coba lagi.", 
                    "Error", 
                    JOptionPane.ERROR_MESSAGE);
            }

        } catch (Exception ex) {
            JOptionPane.showMessageDialog(this, 
                "Kesalahan: " + ex.getMessage(), 
                "Error", 
                JOptionPane.ERROR_MESSAGE);
        }
    }//GEN-LAST:event_jButton1ActionPerformed


