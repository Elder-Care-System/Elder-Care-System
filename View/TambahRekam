    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton2ActionPerformed
       int confirm = JOptionPane.showConfirmDialog(
            this,
            "Apakah Anda ingin kembali?\nProgres Anda tidak akan tersimpan.",
            "Konfirmasi Kembali",
            JOptionPane.YES_NO_OPTION,
            JOptionPane.WARNING_MESSAGE
        );

        if (confirm == JOptionPane.YES_OPTION) {
            new MenuDokter(dokter).setVisible(true);


            Window window = SwingUtilities.getWindowAncestor(this);
            if (window != null) {
                window.dispose();
            }   
        }
    }//GEN-LAST:event_jButton2ActionPerformed

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
        String idLansiaStr = jTextField1.getText().trim();
            String diagnosis = jTextArea1.getText().trim();
            String tindakan = jTextArea2.getText().trim();

            if (idLansiaStr.isEmpty()) {
                JOptionPane.showMessageDialog(this, "ID Lansia harus diisi!", "Error", JOptionPane.ERROR_MESSAGE);
                return;
            }
            if (diagnosis.isEmpty()) {
                JOptionPane.showMessageDialog(this, "Diagnosis harus diisi!", "Error", JOptionPane.ERROR_MESSAGE);
                return;
            }
            if (tindakan.isEmpty()) {
                JOptionPane.showMessageDialog(this, "Tindakan harus diisi!", "Error", JOptionPane.ERROR_MESSAGE);
                return;
            }

            int idLansia;
            try {
                idLansia = Integer.parseInt(idLansiaStr);
            } catch (NumberFormatException e) {
                JOptionPane.showMessageDialog(this, "ID Lansia harus berupa angka!", "Error", JOptionPane.ERROR_MESSAGE);
                return;
            }

            int confirm = JOptionPane.showConfirmDialog(this, "Yakin mau tambah rekam medis?", "Konfirmasi", JOptionPane.YES_NO_OPTION);
            if (confirm != JOptionPane.YES_OPTION) return;

            try {
                java.sql.Connection conn = Model.KoneksiEldercare.getConnection();

                String sql = "INSERT INTO rekam_medis (id_lansia, id_dokter, diagnosis, tindakan, tanggal_pemeriksaan) VALUES (?, ?, ?, ?, NOW())";

                java.sql.PreparedStatement pstmt = conn.prepareStatement(sql);
                pstmt.setInt(1, idLansia);
                pstmt.setInt(2, dokter.getId());
                pstmt.setString(3, diagnosis);
                pstmt.setString(4, tindakan);

                int result = pstmt.executeUpdate();

                if (result > 0) {
                    JOptionPane.showMessageDialog(this, "Rekam medis berhasil ditambahkan!", "Sukses", JOptionPane.INFORMATION_MESSAGE);

                    jTextField1.setText("");
                    jTextArea1.setText("");
                    jTextArea2.setText("");

                    new MenuDokter(dokter).setVisible(true);
                    SwingUtilities.getWindowAncestor(this).dispose();
                }

            } catch (Exception e) {
                JOptionPane.showMessageDialog(this, "Gagal menambah rekam medis: " + e.getMessage(), "Error", JOptionPane.ERROR_MESSAGE);
                e.printStackTrace();
        }        
    }//GEN-LAST:event_jButton1ActionPerformed

