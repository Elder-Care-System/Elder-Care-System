    private void clearForm() {
        TextNamaPasien.setText("");
        TextUsia.setText("");
        comboJenisKelamin.setSelectedIndex(0);
        TextAlamat.setText("");
        TextKeluhan.setText("");
        TextTindakan.setText("");
        System.out.println("✓ Form cleared");
    }
    
