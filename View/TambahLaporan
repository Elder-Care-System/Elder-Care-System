    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
        try {
            System.out.println("\n╔══════════════════════════════════════╗");
            System.out.println("║  PROSES TAMBAH LAPORAN KESEHATAN     ║");
            System.out.println("╚══════════════════════════════════════╝");
            System.out.println("ID Petugas Login: " + idPetugasLogin);
            
            // ========================================
            // VALIDASI SEMUA FIELD
            // ========================================
            
            // 1. Validasi Nama
            String nama = TextNamaPasien.getText().trim();
            if (nama.isEmpty()) {
                JOptionPane.showMessageDialog(this, 
                    "Nama tidak boleh kosong!", 
                    "Error Validasi", 
                    JOptionPane.ERROR_MESSAGE);
                TextNamaPasien.requestFocus();
                return;
            }
            System.out.println("✓ Nama: " + nama);

            // 2. Validasi Usia
            String usiaStr = TextUsia.getText().trim();
            if (usiaStr.isEmpty()) {
                JOptionPane.showMessageDialog(this, 
                    "Usia tidak boleh kosong!", 
                    "Error Validasi", 
                    JOptionPane.ERROR_MESSAGE);
                TextUsia.requestFocus();
                return;
            }
            
            int usia;
            try {
                usia = Integer.parseInt(usiaStr);
            } catch (NumberFormatException e) {
                JOptionPane.showMessageDialog(this, 
                    "Usia harus berupa angka!", 
                    "Error Validasi", 
                    JOptionPane.ERROR_MESSAGE);
                TextUsia.requestFocus();
                return;
            }
            
            if (usia < 60 || usia > 120) {
                JOptionPane.showMessageDialog(this,
                    "Usia lansia harus antara 60-120 tahun!",
                    "Error Validasi",
                    JOptionPane.ERROR_MESSAGE);
                TextUsia.requestFocus();
                return;
            }
            System.out.println("✓ Usia: " + usia);

            // 3. Validasi Jenis Kelamin (ComboBox)
            String jenisKelamin = (String) comboJenisKelamin.getSelectedItem();
            if (jenisKelamin == null || jenisKelamin.equals("Pilih Jenis Kelamin")) {
                JOptionPane.showMessageDialog(this,
                    "Pilih jenis kelamin!",
                    "Error Validasi",
                    JOptionPane.ERROR_MESSAGE);
                comboJenisKelamin.requestFocus();
                return;
            }
            System.out.println("✓ Jenis Kelamin: " + jenisKelamin);

            // 4. Validasi Alamat
            String alamat = TextAlamat.getText().trim();
            if (alamat.isEmpty()) {
                JOptionPane.showMessageDialog(this, 
                    "Alamat tidak boleh kosong!", 
                    "Error Validasi", 
                    JOptionPane.ERROR_MESSAGE);
                TextAlamat.requestFocus();
                return;
            }
            System.out.println("✓ Alamat: " + alamat);

            // 5. Validasi Keluhan
            String keluhan = TextKeluhan.getText().trim();
            if (keluhan.isEmpty()) {
                JOptionPane.showMessageDialog(this, 
                    "Keluhan tidak boleh kosong!", 
                    "Error Validasi", 
                    JOptionPane.ERROR_MESSAGE);
                TextKeluhan.requestFocus();
                return;
            }
            System.out.println("✓ Keluhan: " + keluhan);

            // 6. Validasi Tindakan
            String tindakan = TextTindakan.getText().trim();
            if (tindakan.isEmpty()) {
                JOptionPane.showMessageDialog(this, 
                    "Tindakan tidak boleh kosong!", 
                    "Error Validasi", 
                    JOptionPane.ERROR_MESSAGE);
                TextTindakan.requestFocus();
                return;
            }
            System.out.println("✓ Tindakan: " + tindakan);
            
            System.out.println("\n✅ Semua validasi PASSED!");

            // ========================================
            // KONFIRMASI
            // ========================================
            
            int confirm = JOptionPane.showConfirmDialog(this,
                "Tambah laporan kesehatan untuk:\n\n" +
                "Nama         : " + nama + "\n" +
                "Usia         : " + usia + " tahun\n" +
                "Jenis Kelamin: " + jenisKelamin + "\n" +
                "Alamat       : " + alamat + "\n" +
                "Keluhan      : " + keluhan + "\n" +
                "Tindakan     : " + tindakan,
                "Konfirmasi Tambah",
                JOptionPane.YES_NO_OPTION,
                JOptionPane.QUESTION_MESSAGE);

            if (confirm != JOptionPane.YES_OPTION) {
                System.out.println("❌ User membatalkan proses");
                return;
            }

            // ========================================
            // BUAT OBJEK & SIMPAN
            // ========================================
            
            System.out.println("\n⏳ Memproses data...");
            
            // Buat objek Lansia
            Lansia lansia = new Lansia(0, nama, usia, jenisKelamin, alamat);
            System.out.println("✓ Objek Lansia created");

            // Buat objek LaporanKesehatan
            LaporanKesehatan laporan = new LaporanKesehatan();
            laporan.setIdPetugas(idPetugasLogin);
            laporan.setKeluhan(keluhan);
            laporan.setTindakan(tindakan);
            System.out.println("✓ Objek LaporanKesehatan created");
            System.out.println("  - ID Petugas: " + idPetugasLogin);

            // Simpan ke database
            System.out.println("\n⏳ Menyimpan ke database...");
            boolean success = laporanService.tambahLaporanDanLansia(lansia, laporan);

            // ========================================
            // HANDLE RESULT
            // ========================================
            
            if (success) {
                System.out.println("\n╔══════════════════════════════════════╗");
                System.out.println("║        ✅ BERHASIL DISIMPAN!         ║");
                System.out.println("╚══════════════════════════════════════╝\n");
                
                JOptionPane.showMessageDialog(this, 
                    "✅ Laporan kesehatan berhasil ditambahkan!\n\n" +
                    "Nama: " + nama + "\n" +
                    "Usia: " + usia + " tahun\n" +
                    "Keluhan: " + keluhan,
                    "Berhasil",
                    JOptionPane.INFORMATION_MESSAGE);

                // Clear form
                clearForm();
                
                // Kembali ke panel laporan & refresh
                if (menuPetugas != null) {
                    System.out.println("✓ Memanggil menuPetugas.refreshLaporan()");
                    menuPetugas.refreshLaporan();
                } else {
                    System.out.println("⚠️ menuPetugas NULL - tidak bisa auto refresh");
//                    JOptionPane.showMessageDialog(this,
//                        "Data berhasil disimpan!\nSilakan kembali ke menu Laporan untuk melihat data.",
//                        "Info",
//                        JOptionPane.INFORMATION_MESSAGE);
                }

            } else {
                System.out.println("\n╔══════════════════════════════════════╗");
                System.out.println("║          ❌ GAGAL SIMPAN!            ║");
                System.out.println("╚══════════════════════════════════════╝");
                System.out.println("Service mengembalikan FALSE");
                System.out.println("Cek error di console di atas ↑↑↑\n");
                
                JOptionPane.showMessageDialog(this, 
                    "❌ Gagal menambahkan laporan!\n\n" +
                    "Kemungkinan masalah:\n" +
                    "1. Koneksi database terputus\n" +
                    "2. ID Petugas tidak valid (Foreign Key Error)\n" +
                    "3. Struktur tabel tidak sesuai\n\n" +
                    "Cek console untuk detail error.", 
                    "Error", 
                    JOptionPane.ERROR_MESSAGE);
            }

        } catch (NumberFormatException ex) {
            System.out.println("❌ ERROR: Format angka tidak valid");
            System.out.println("   Message: " + ex.getMessage());
            JOptionPane.showMessageDialog(this, 
                "Format angka tidak valid!\nPastikan usia berupa angka.", 
                "Error", 
                JOptionPane.ERROR_MESSAGE);
                
        } catch (Exception ex) {
            System.out.println("❌ ERROR UNEXPECTED!");
            System.out.println("   Type: " + ex.getClass().getName());
            System.out.println("   Message: " + ex.getMessage());
            ex.printStackTrace();
            
            JOptionPane.showMessageDialog(this, 
                "Terjadi kesalahan sistem:\n\n" + ex.getMessage() + 
                "\n\nCek console untuk detail.", 
                "Error", 
                JOptionPane.ERROR_MESSAGE);
        }
    }//GEN-LAST:event_jButton1ActionPerformed

