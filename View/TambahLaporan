    private int idPetugasLogin;

    

    public TambahLaporan(int idPetugas, MenuPetugas menu) {
        initComponents();
        this.idPetugasLogin = idPetugas;
        this.menuPetugas = menu;
        
        setupJenisKelaminComboBox(); // ✅ Setup dropdown
        
        System.out.println("✅ TambahLaporan initialized");
        System.out.println("   - ID Petugas: " + idPetugas);
        System.out.println("   - MenuPetugas reference: " + (menu != null ? "OK" : "NULL"));
    }
    
    public TambahLaporan(int idPetugas) {
        initComponents();
        this.idPetugasLogin = idPetugas;
        this.menuPetugas = null; // Tidak ada reference
        
        System.out.println("⚠️ TambahLaporan initialized WITHOUT MenuPetugas reference");
    }
    
    private void setupJenisKelaminComboBox() {
    comboJenisKelamin.removeAllItems();
    comboJenisKelamin.addItem("Pilih Jenis Kelamin");
    comboJenisKelamin.addItem("Laki-laki");
    comboJenisKelamin.addItem("Perempuan");
    comboJenisKelamin.setSelectedIndex(0);
}




    

